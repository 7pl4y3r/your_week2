<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.apps.a7pl4y3r.yourweek.independent.AddAlarm">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarAddAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Add alarm"
            android:background="@color/colorPrimaryDark"/>

    <EditText
            android:id="@+id/etAddAlarm"
            android:layout_width="256dp" 
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:layout_centerHorizontal="true"
            android:hint="Name"
            android:layout_below="@+id/toolbarAddAlarm"
            android:textSize="24sp"/>
    
    <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="3.7.1991"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/etAddAlarm"/>

    <Button
            android:id="@+id/btDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose date"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvDate"
            android:layout_marginTop="16dp"/>

    <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="07:00"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btDate"
            android:layout_marginTop="32dp"/>

    <Button
            android:id="@+id/btTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvTime"
            android:layout_marginTop="16dp"
            android:text="Choose time"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"/>

        <Button
                android:id="@+id/btSaveAlarm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save alarm"/>

    </LinearLayout>

</RelativeLayout>
